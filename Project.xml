<?xml version="1.0" encoding="utf-8"?>
<project>

	<!-- _________________________ Application Settings _________________________ -->

	<app 
		title="Friday Night Funkin' [Tabi Mod]"
		file="Forever Engine Legacy"
		packageName="com.yoshubs.foreverenginelegacy"
		package="com.yoshubs.foreverenginelegacy"
		main="Main"
		version="0.3.1"
		company="Yoshubs"
	/>

	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
		or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"-->
	<app preloader="flixel.system.FlxPreloader" />

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name="SWF_VERSION" value="11.8" />

	<section if="debug">
		<set name="BUILD_DIR" value="export/debug/x64" unless="32bits"/>
		<set name="BUILD_DIR" value="export/debug/x86" if="32bits"/>
	</section>

	<section if="release">
		<set name="BUILD_DIR" value="export/release/x64" unless="32bits"/>
		<set name="BUILD_DIR" value="export/release/x86" if="32bits"/>
	</section>

	<section if="final">
		<set name="BUILD_DIR" value="export/final/x64" unless="32bits"/>
		<set name="BUILD_DIR" value="export/final/x86" if="32bits"/>
	</section>

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" resizable="false" />

	<!-- _____________________________ Custom Defines ____________________________ -->

	<!--<define name="DISCORD_RPC" if="desktop" unless="web || neko || hl"/>-->

	<!-- _____________________________ Path Settings _____________________________ -->
	<!--
		if you ever want to preload specific asset folders, add them here
		keep in mind that if you don't want said asset folders to be cleared by the game's paths system
		simply add the files to Paths.hx, on the dumpExclusions array
	-->

	<source path="source"/>
	<assets path="assets"/>
	<assets path="assets/songs"/>
	<assets path="assets/music" preload="true"/>

	<assets path="assets/appIcons" embed="true"/>

	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="tjson"/>
	<haxelib name="flixel"/>
	<haxelib name="polymod"/>
	<haxelib name="flixel-ui"/>
	<haxelib name="flixel-addons"/>
	<haxelib name="ansi" if="linux || mac"/>
	<haxelib name="discord_rpc" if="DISCORD_RPC"/>
	<haxelib name="hxcpp-debug-server" if="debug"/>

	<!-- ______________________________ Default Defines _____________________________ -->

	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<haxedef name="FLX_NO_TOUCH" if="desktop" />

	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />

	<!-- Always enable Null Object Reference check for crash dialog -->
	<haxedef name="HXCPP_CHECK_POINTER"/>
	<haxedef name="HXCPP_STACK_LINE"/>

	<!--Fuck you Baltimore-->
	<haxedef name="no-deprecation-warnings"/>

	<!-- ______________________________ Release Defines _____________________________ -->

	<section unless="debug">
		<!--Disables the flixel debugger.-->
		<haxedef name="FLX_NO_DEBUG"/>
		<!--
			Automatically removes unused code during compilation
			MARK EVERYTHING THAT IS A DYNAMIC OR USES REFLECT AS @:keep ELSE THIS WILL BREAK
		-->
		<haxeflag name="-dce full"/>

		<!-- Disables tracing. -->
		<haxedef name="no_traces" />
	</section>

	<!-- ______________________________ Debug Defines _____________________________ -->

	<section if="debug">
		<!--Prints stats for gc after a session.-->
		<haxedef name="HXCPP_GC_SUMMARY" if="cpp"/>
	</section>

	<!-- ______________________________ Misc Defines _____________________________ -->

	<error value="You're using an old Haxe version, use 4.2.5 or newer." if="{haxe &lt;= 4.2.4 }"/>
	<error value="You're using an old Flixel version, use 5 or newer." if="{flixel &lt;= 4.11.0 }"/>
	<error value="You're using an old Flixel-Addons version, update to 3 or greater" if="${flixel-addons &lt;= 2.11.0}"/>

	<!-- _________________________________ Custom _______________________________ -->

	<icon path="assets/appIcons/icon16.png" size='16'/>
	<icon path="assets/appIcons/icon32.png" size='32'/>
	<icon path="assets/appIcons/icon64.png" size='64'/>
	<icon path="assets/appIcons/icon128.png" size='128'/>
	<icon path="assets/appIcons/icon256.png" size='256'/>
	<icon path="assets/appIcons/icon512.png" size='512'/>
	<icon path="assets/appIcons/iconOG.png"/>

</project>
